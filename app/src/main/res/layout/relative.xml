<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="470dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#bbc3436e"
        app:srcCompat="@drawable/nationalmuseum" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="371dp"
        android:layout_height="67dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="National Museum"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location"
        android:layout_weight="1"
        android:lineSpacingExtra="8sp"
        android:text="Distance from UST: 2.7 km"
        android:textAppearance="@android:style/TextAppearance" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title2"
        android:layout_weight="1"
        android:lineSpacingExtra="8sp"
        android:text="Location: Padre Burgos Ave | Ermita, Manila, Luzon 2004, Philippines"
        android:textAppearance="@android:style/TextAppearance" />

    <Button
        android:id="@+id/button7"
        android:layout_width="205dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="NEXT" />

    <Button
        android:id="@+id/button9"
        android:layout_width="205dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="BACK" />

</RelativeLayout>